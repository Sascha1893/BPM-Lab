<bpel:process name="WebShopMain"
         targetNamespace="http://de.ustutt.simtech"
         suppressJoinFailure="yes"
         xmlns:tns="http://de.ustutt.simtech"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns="http://iaas.uni-stuttgart.de/labs/FlowSOG" xmlns:ns1="http://www.w3.org/2001/XMLSchema">

    <!-- Import the client WSDL -->
    
    <bpel:import namespace="http://iaas.uni-stuttgart.de/labs/FlowSOG" location="BPMLabServices.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="WebShopMainArtifacts.wsdl" namespace="http://de.ustutt.simtech" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:WebShopMain"
                     myRole="WebShopMainProvider"
                     />
        <bpel:partnerLink name="InventoryServicePartner" partnerLinkType="tns:ListItemsPartner" partnerRole="admin"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:WebShopMainRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:WebShopMainResponseMessage"/>
        <bpel:variable name="ListItemsPartnerResponse" messageType="ns:listProductsOutput">
        </bpel:variable>
        <bpel:variable name="ListItemsPartnerRequest" messageType="ns:listProductsInput">
        </bpel:variable>
        
        <bpel:variable name="CheckVorhandenResponse" messageType="ns:checkAvailabilityOutput"></bpel:variable>
        <bpel:variable name="CheckVorhandenRequest" messageType="ns:checkAvailabilityInput"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main"><!-- Receive input from requester. 
             Note: This maps to operation defined in WebShopMain.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client" createInstance="yes" operation="process" portType="tns:WebShopMain" variable="input"/>
        
        <!-- Generate reply to synchronous request -->
        
        
        
        <bpel:assign validate="no" name="AssignOutput">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:WebShopMainResponse xmlns:tns="http://de.ustutt.simtech" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:WebShopMainResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:assign validate="no" name="AssignListProducts">
            <bpel:copy>
                <bpel:from><bpel:literal><FlowSOG:listProducts xmlns:FlowSOG="http://iaas.uni-stuttgart.de/labs/FlowSOG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <FlowSOG:limit>0</FlowSOG:limit>
</FlowSOG:listProducts>
</bpel:literal></bpel:from>
                <bpel:to variable="ListItemsPartnerRequest" part="listProductsInput"></bpel:to>
            </bpel:copy>
            
            
            
            <bpel:copy><bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="listProductsInput" variable="ListItemsPartnerRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:limit]]></bpel:query>
                </bpel:to>
            
            </bpel:copy>
        </bpel:assign>
        
        
        
        <bpel:invoke name="InvokeListItems" partnerLink="InventoryServicePartner" operation="listProducts" portType="ns:InventoryPortType" inputVariable="ListItemsPartnerRequest" outputVariable="ListItemsPartnerResponse"></bpel:invoke>
        
        <bpel:assign validate="no" name="AssignOutputForCheckVorhanden">
            <bpel:copy>
                <bpel:from><bpel:literal><FlowSOG:checkAvailability xmlns:FlowSOG="http://iaas.uni-stuttgart.de/labs/FlowSOG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <FlowSOG:productId>FlowSOG:productId</FlowSOG:productId>
</FlowSOG:checkAvailability>
</bpel:literal></bpel:from>
                <bpel:to variable="CheckVorhandenRequest" part="checkAvailabilityInput"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from><bpel:literal><FlowSOG:checkAvailabilityResponse xmlns:FlowSOG="http://iaas.uni-stuttgart.de/labs/FlowSOG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <FlowSOG:product>
    <FlowSOG:id>FlowSOG:id</FlowSOG:id>
    <FlowSOG:name>FlowSOG:name</FlowSOG:name>
    <FlowSOG:producer>FlowSOG:producer</FlowSOG:producer>
    <FlowSOG:weight>0.0</FlowSOG:weight>
    <FlowSOG:price>0.0</FlowSOG:price>
    <FlowSOG:status>
      <FlowSOG:currentAvailability>available</FlowSOG:currentAvailability>
      <FlowSOG:availableAgainInDays>0</FlowSOG:availableAgainInDays>
    </FlowSOG:status>
  </FlowSOG:product>
</FlowSOG:checkAvailabilityResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="CheckVorhandenResponse" part="checkAvailabilityOutput"></bpel:to>
            </bpel:copy>
            
            <bpel:copy>
                <bpel:from part="listProductsOutput" variable="ListItemsPartnerResponse">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:productList/ns:product[1]/ns:id]]></bpel:query>
                </bpel:from>
                <bpel:to part="checkAvailabilityInput" variable="CheckVorhandenRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:productId]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="InvokeItemVorhanden" partnerLink="InventoryServicePartner" operation="checkAvailability" portType="ns:InventoryPortType" inputVariable="CheckVorhandenRequest" outputVariable="CheckVorhandenResponse"></bpel:invoke>
        <bpel:reply name="replyOutput" partnerLink="client" portType="tns:WebShopMain" operation="process" variable="output" />
    
    </bpel:sequence>
</bpel:process>

